{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"root": false,
	"vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
	"files": { "ignoreUnknown": true, "includes": ["**", "!node_modules", "!dist", "!build"] },
	"formatter": { "enabled": true, "indentStyle": "tab" },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"includes": ["**", "!dist/**"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": { "source": { "organizeImports": "on" } }
	},
	"overrides": [
		{
			"includes": ["**/*.astro"],
			"linter": {
				"enabled": false
			}
		}
	]
}
